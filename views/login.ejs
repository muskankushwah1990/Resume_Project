<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS Link -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- fontawesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">


    <!-- Bootstrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <!-- Login -->
    <section id="login" class=" register-form" style="background-color: rgb(237, 230, 230); width: 100%;">
        <div class="container">
            <div class="row">
                <!-- Column-1 -->
                <div class="col-lg-6">
                    <img src="/images/loginImage.jpeg"
                        style="width: 100%; height: 550px; margin-top: 60px; margin-bottom: 120px;">
                </div>
                <!-- End Column-1 -->

                <!-- Column-2 -->
                <div class="col-lg-6 bglogin p-4" style="margin-top: 60px;  margin-bottom: 130px;">
                    <form action="verifyLogin" method="post">
                        <!-- logo -->
                        <center>
                            <img class="mb-4 rounded-circle" src="https://capstan.ctscentral.net/img/user-icon.png"
                                alt="logo" width="20%" style="background-color:rgb(93, 20, 93); padding: 10px;"
                                height="20%">
                        </center>

                        <!-- Heading (Login) -->
                        <h1 class="mb-5 text-center" style="color: rgb(3, 52, 72);;">Login</h1>

                        <% if(message.length> 0) { %>
                            <div class="alert alert-primary">
                                <!--to print -->
                                <%= message %>
                            </div>
                            <% } %>

                                <% if(msg.length> 0) { %>
                                    <div class="alert alert-primary">
                                        <!-- To print message -->
                                        <%= msg %>
                                    </div>
                                    <% } %>



                                        <!-- Email -->
                                        <div class="row mb-3">
                                            <div class="col-lg-2 text-center text-light rounded p-2"
                                                style="background-color: rgb(93, 20, 93);">
                                                Email</div>
                                            <div class="col-lg-10">
                                                <input name="email" class="form-control" type="email" id="email"
                                                    placeholder="name@example.com" required>
                                            </div>

                                        </div>

                                        <!-- Password -->
                                        <div class="row mb-5">
                                            <div class="col-lg-2 text-center text-light rounded fw-light my-auto p-2"
                                                style="background-color: rgb(93, 20, 93);">
                                                Password</div>
                                            <div class="col-lg-10">
                                                <input name="password" class="form-control" type="password" id="lock"
                                                    required>
                                            </div>
                                        </div>

                                        <!-- Button (Login) -->
                                        <center>
                                            <button type="submit" class="btn mb-5 btn-lg border"
                                                id="loginButton">Login</button>
                                        </center>

                                        <!-- Register Now -->
                                        <center>
                                            <p class="text-uppercase" style="color: rgb(3, 52, 72);">Don't have an
                                                account? &nbsp;
                                                <a href="/register" style="font-weight: 400;">Register Now</a>
                                            </p>

                                        </center>
                    </form>
                </div>

                <!-- End Column-2 -->
            </div>
        </div>
    </section>

</body>

</html>